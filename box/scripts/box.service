  log Debug "åº”ç”¨åˆ—è¡¨ (æ¥è‡ª package.list.cfg): ${packages_list[*]}"
  log Debug "GID åˆ—è¡¨ (æ¥è‡ª gid.list.cfg): ${gid_list[*]}"

  > "${uid_list}"

