find_packages_uid() {
  log Info "ä»£ç†æ¨¡å¼: ${proxy_mode}"

  if [ "${proxy_mode}" = "core" ]; then
    log Info "æ ¸å¿ƒæ¨¡å¼å·²å¯ç”¨ï¼Œè·³è¿‡ package å’Œ gid å¤„ç†"
